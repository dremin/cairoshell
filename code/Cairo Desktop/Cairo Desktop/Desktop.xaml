<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="CairoDesktop.Desktop" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:control="clr-namespace:CairoDesktop"
    Title=""
    WindowStyle="None"
    Height="{DynamicResource {x:Static SystemParameters.FullPrimaryScreenWidthKey}}"
    Width="{DynamicResource {x:Static SystemParameters.FullPrimaryScreenWidthKey}}"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Top="0"
    Left="0"
    AllowsTransparency="True"
    Focusable="False"
    Background="{x:Null}" Topmost="False" Activated="Window_Activated" Closing="Window_Closing" SourceInitialized="Window_SourceInitialized">
    <Grid Name="grid" Margin="0,35,0,0">
    </Grid>
    <Window.ContextMenu>
        <ContextMenu Style="{StaticResource CairoContextMenuStyle}">
            <MenuItem Header="Paste" Style="{StaticResource CairoMenuItemStyle}" Click="miPaste_Click"  Name="miPaste" />
            <Separator Style="{StaticResource CairoMenuSeparatorStyle}" />
            <MenuItem Header="Personalization" Style="{StaticResource CairoMenuItemStyle}" Click="miPersonalization_Click"  Name="miPersonalization" />
        </ContextMenu>
    </Window.ContextMenu>
</Window>